@model IEnumerable<HealthyMe.Models.Exercis>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tips)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tips)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ExerciseId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ExerciseId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ExerciseId })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
 $(document).ready(function () {
 $('.table').DataTable();
 });
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />
