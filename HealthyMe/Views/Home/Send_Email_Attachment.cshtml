@model HealthyMe.Models.SendEmailViewModel
@{
    ViewBag.Title = "Send_Email_Attachment";
}
@*To get email attachment*@
<h2>Send_Email_Attachment</h2>

<script src="~/Scripts/jquery-1.7.1.min.js"></script>

<script>

    $(document).ready(function () {

        if ('@ViewBag.Message' == 'Sent') {

            alert('Mail has been sent successfully');

        }

    });

</script>

<h2>Index</h2>

<fieldset>

    <legend>
        Send Email

    </legend>

    @using (@Html.BeginForm("Index", "SendMailer", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data" }))

    {

        @Html.ValidationSummary()

        <input type="submit" value="Send" />



        <table>

            <tr>

                <td>
                    To:

                </td>

                <td>

                    @Html.TextBoxFor(m => m.ToEmail)

                </td>

            </tr>

            <tr>

                <td>
                    Subject:

                </td>

                <td>

                    @Html.TextBoxFor(m => m.Subject)

                </td>

            </tr>

            <tr>

                <td>
                    Attachment

                </td>

                <td>

                    <input type="file" name="fileUploader" />

                </td>

            </tr>

            <tr>

                <td>
                    Body:

                </td>

                <td>

                    @Html.TextAreaFor(m => m.Contents)

                </td>

            </tr>

        </table>

    }

</fieldset>